{% assign items = site.service | sort: "date" | reverse %}

{% if page.service.limit %}
  {% assign items = items | slice: 0, page.service.limit %}
{% endif %}

{% if page.service.scrollable %}
  <div style="max-height: 200px; overflow-y: auto;">
{% endif %}

{% for item in items %}
  <div class="post">
    {{ item.content | markdownify }}
  </div>
{% endfor %}

{% if page.service.scrollable %}
  </div>
{% endif %}
